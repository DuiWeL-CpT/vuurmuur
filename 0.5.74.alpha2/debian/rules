#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

# shared library versions, option 1
version=2.0.5
major=2
# option 2, assuming the library is created as src/.libs/libfoo.so.2.0.5 or so
#version=`ls src/.libs/lib*.so.* | \
# awk '{if (match($$0,/[0-9]+\.[0-9]+\.[0-9]+$$/)) print substr($$0,RSTART)}'`
#major=`ls src/.libs/lib*.so.* | \
# awk '{if (match($$0,/\.so\.[0-9]+$$/)) print substr($$0,RSTART+4)}'`

# hppa build failure workaround
ifeq ($(DEB_BUILD_ARCH),hppa)
CFLAGS=-fno-gcse
endif

CFLAGS = "-Wall -g3 -O0"

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	CFLAGS=$(CFLAGS) ./configure --prefix=/usr \
				     --mandir=\$${prefix}/share/man \
				     --infodir=\$${prefix}/share/info \
				     --sysconfdir=/etc

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	mkdir $(CURDIR)/debian/tmp

	# Add here commands to install the package into debian/tmp
	$(MAKE) install DESTDIR=$(CURDIR)/debian/libvuurmuur

# 	install -m 755 -o root -g root -d debian/tmp/usr/lib/gnutls
# 	for i in serv cli crypt prime asn1c CertificateExample CrlExample ; do \
# 		install -m 755 -o root -g root src/.libs/$$i debian/tmp/usr/lib/gnutls/$$i ;\
# 	done

# Build architecture-independent files here.
binary-indep:
	echo "binary-indep..."
	dh_testdir
	dh_testroot

	dh_installdocs
#	install -m 755 -o root -g root -d debian/gnutls-doc/usr/share/doc/gnutls-doc/
#	install -m 644 -o root -g root doc/tex/gnutls.ps debian/gnutls-doc/usr/share/doc/gnutls-doc/
#	install -m 644 -o root -g root doc/tex/gnutls.html debian/gnutls-doc/usr/share/doc/gnutls-doc/
#	install -m 644 -o root -g root doc/tex/gnutls.css debian/gnutls-doc/usr/share/doc/gnutls-doc/

	dh_installexamples

#	rm -f debian/gnutls-doc/usr/share/doc/gnutls-doc/examples/srp/Makefile*
#	rm -f debian/gnutls-doc/usr/share/doc/gnutls-doc/examples/x509/Makefile*

	dh_installman
	dh_installinfo
#	dh_installchangelogs -i ChangeLog
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build install
	echo "binary-arch..."
	dh_testdir
	dh_testroot
	dh_movefiles -a

#	dh_installdebconf	
	dh_installdocs -a
#	install -m 644 -o root -g root $(CURDIR)/lib/libgnutls.m4 $(CURDIR)/debian/gnutls-dev/usr/share/aclocal

	dh_installmenu -a
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron -a
	dh_installman -a
	dh_installinfo -a
#	dh_undocumented
#	dh_installchangelogs -a ChangeLog

	install -m 755 -o root -g root -d debian/libvuurmuur/etc/vuurmuur/plugins
	install -m 600 -o root -g root plugins/textdir/textdir.conf.debian debian/libvuurmuur/etc/vuurmuur/plugins/textdir.conf

	dh_link -a 
#	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_makeshlibs -a
	dh_installdeb -a
#	dh_perl
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
